page {
  background-color: #ededed;
}

.blog {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
}

.blog-header {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.blog-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
}

.blog-nickName {
  font-size: 32rpx;
  color: #4b4b4b;
}

.blog-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-content {
  margin: 20rpx 0;
  color: #4b4b4b;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.image-list {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-list .image-wrap {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.image-list .image {
  width: 100%;
  height: 100%;
}

.image-list .image:nth-child(3n) {
  margin-right: 0;
}
