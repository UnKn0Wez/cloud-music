@charset "UTF-8";
page {
  background-color: #ededed;
}

.title {
  background: -webkit-linear-gradient(left, #6190e8, #a7bfe8);
  height: 180rpx;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title .find {
  color: #fff;
  font-size: large;
  position: absolute;
  left: 45%;
  bottom: 15%;
}

.title .icon-fanhui {
  color: #fff;
  font-size: 36rpx;
  position: absolute;
  left: 20rpx;
  bottom: 17%;
}

.container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100rpx;
}

.blog-card {
  margin-bottom: 20rpx;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
  color: #697480;
}

.comment-list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.comment-title {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  color: #4b4b4b;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.5;
  font-weight: 400;
  padding: 20rpx 0;
  color: #4b4b4b;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  border-top: 2px solid rgba(0, 0, 0, 0.1);
}
