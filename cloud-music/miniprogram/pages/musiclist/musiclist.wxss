/* pages/musiclist/musiclist.wxss */
.detail-fix{
  position: fixed;
  top: 0;
  height: 180rpx;
  width: 100%;
  filter:blur(40rpx);
  z-index: 2;
  
}
.detail-fix-mask{
  position: fixed;
  top: 0;
  height: 180rpx;
  width: 100%;
  background-color: #222;
  z-index: 1;
}
.iconfont{
  color :#fefefe;
  z-index: 2;
}
.icon-fanhui{
  position: fixed;
  top: 115rpx;
  left: 10rpx;
  font-size: 40rpx;
}
.detail-container{
  margin-top: 180rpx;
  height :320rpx;
  filter:blur(40rpx);
  opacity: 0.4;
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 330rpx;
  background-color: #222;
  filter:blur(40rpx);
  top: 160rpx;
  bottom: 0;
  z-index : -1;
}
.detail-mask-mask{
  position: absolute;
  width: 100%;
  height: 330rpx;
  background-color: #222;
  top: 160rpx;
  bottom: 0;
  z-index : -2;
}

.detail-info{
  display: flex;
  position: absolute;
  top: 180rpx;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items :center;
}

.detail-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail-name{
  color:#FFFFFF;
  font-size: 36rpx;
  line-height: 1.5;
  font-weight: 400;
}
