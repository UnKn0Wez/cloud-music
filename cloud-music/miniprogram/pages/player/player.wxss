/* pages/player/player.wxss */
.player-name{
  font-size: 90%;
  margin-top: 100rpx;
  text-align: center;
}
.player-name-writer{
  font-size: 80%;
}
.player-container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}
.player-mask{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -2;
  background-color: #222;
}

.player-info{
  margin-top: 180rpx;
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.player-disc{
  width: 592rpx;
  height: 592rpx;
  background:url('https://image-un.oss-cn-zhangjiakou.aliyuncs.com/image/qzw/WX-music/disc.png') no-repeat center/contain;
  position: absolute;
  left: 50%;
  transform: translate(-50%,140rpx);
}


.player-disc::after{
  content: '';
  width: 192rpx;
  height: 274rpx;
  position: absolute;
  top: -135rpx;
  left: 266rpx;
  background: url('https://image-un.oss-cn-zhangjiakou.aliyuncs.com/image/qzw/WX-music/lALPD3IrtqHd3VHNAZLNARE_273_402.png') no-repeat center/contain;
  transform: rotate(-15deg);
  transform-origin:24rpx 10rpx ;
  transition:transform 0.8s ease;
}
.playing.player-disc::after{
  transform: rotate(0deg);
}
.player-img{
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -184rpx;
  margin-left: -184rpx;
}


.zhuan{
  animation: disc 12s linear infinite;
}
@keyframes disc{
  from{
    transform:rotate(0deg)
  }to{
    transform:rotate(360deg)
  }
}
.ting{
  animation-play-state: paused;
}



/* 控制面板 */
.control{
  position: absolute;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}


