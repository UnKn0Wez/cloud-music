      -ms-flex-align: center;
          align-items: center;
  margin-bottom: 20rpx;
}

.container .main .main-item movable-area movable-view .item .row .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.container .main .main-item movable-area movable-view .item .row .time {
  color: #939393;
  font-size: 24rpx;
}

.container .main .main-item movable-area movable-view .item .item-content {
  color: #646060;
}

.container .main .main-item .delete-btn {
  width: 184rpx;
  height: 180rpx;
  background-color: #ff81b4;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 180rpx;
}

.ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
