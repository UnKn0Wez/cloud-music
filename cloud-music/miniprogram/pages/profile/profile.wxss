page{
   background-color: #eef4f8;
   font-size: 45rpx;
}
.profile-title{
   text-align: center;
   background-color: #1377ff;
   position: fixed;
   top: 0;
   left: 0;
   height: 12.3%;
   width: 100%;
   z-index: 100;
}
/* 810px   1620rpx */
.title-myself{
   position: relative;
   top: 62%;
   color: #fff;
   font-size: 70%;
}
.profile-container{
   position: absolute;
   top: 0;
   left: 0;
   height: 35%;
   width: 100%;
   background-color: #1377ff;
}
.profile-info{
   display: flex;
   position: relative;
   top: 40%;
}
.info-img{
   position: relative;
   left: 40rpx;
   width: 140rpx;
   height: 140rpx;
   text-align: center;
   border-radius: 100rpx;
   background-color: #e9e9e9;
}

.icon-wodedangxuan{
   font-size: 65rpx;
   position: relative;
   top: 25%;
   color: #c3c3c3;
}
.info-name{
   position: relative;
   left: 60rpx;
   top: 5rpx;
   font-size: 45rpx;
   color: #fff;
}
.icon-nan{
   font-size: 40rpx;
   color: #c9e1ff;
   position: absolute;
   top: 10%;
   left: 40%;
}
.info-show{
   position: relative;
   top: 80rpx;
   left: -3.5%;
   color: #bedcff;
   font-size: 70%;
}
.profile-aboutme{
   position: absolute;
   border-radius: 20rpx;
   left: 5%;
   top: 80%;
   width: 90%;
   height: 35%;
   background-color: #fff;
}
.aboutme-info{
   margin-top: 5%;
   margin-bottom: 5%;
   display: flex;
   align-items: center;
}
.aboutme{
   font-size: 70%;
}
.aboutme-num{
   flex: 1;
   display: flex;
   flex-direction: column;
   align-items: center;
}
.message{
   position: absolute;
   border-radius: 20rpx;
   top: 120%;
   width: 90%;
   left: 5%;
   height: 60%;
   background-color: #fff;
   display: flex;
   flex-direction: column;
}
.message-back{
   background-color: #fff;
}
.message-info{
   flex: 1;
   position: relative;
   left: 5%;
   top: 8%;
}
.icon-gengduo{
   color: #b9b9b9;
   position: relative;
   right: -410rpx;
}
.phone{
   position: absolute;
   border-radius: 15rpx;
   top: 185%;
   width: 90%;
   left: 5%;
   height: 40%;
   background-color: #fff;
   display: flex;
   flex-direction: column;
}
.font{
   width: 280rpx;
}
.phone-info{
   flex: 1;
   position: relative;
   left: 5%;
   top: 8%;
}